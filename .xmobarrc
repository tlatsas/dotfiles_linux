Config {
    font = "xft:Sans Mono:size=8"
    , bgColor = "#232323"
    , fgColor = "#C9A34E"
    , position = BottomW L 90
    , lowerOnStart = True
    , commands = [
        Run Weather "LGAV" [
            "-t"
            , " <tempC>C"
            , "-L",         "10"
            , "-H",         "33"
            , "--normal",   "lightgreen"
            , "--high",     "red"
            , "--low",      "lightblue"
        ] 36000
        , Run Date "%a %b %d %H:%M" "date" 10
        , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ <fc=#b4cdcd>%date%</fc> | Athens:%LGAV%"
}
