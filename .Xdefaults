! ~/.Xdefaults

! vim: ai:si:et:ts=4:sw=4:ft=xdefaults:

#include "lib/xcolors/eqie6"

!
! fonts
!
Xft*font:           Sans:size=8
Xft*lcdfilter:      lcddefault
Xft*antialias:      true
Xft*rgba:           rgb
Xft*hinting:        true
Xft*hintstyle:      hintfull
Xft*autohint:       false

!
! mouse cursor
!
Xcursor*theme:      ComixCursors-White-Small-Slim
Xcursor*size:       10

!
! urxvt configuration
!
URxvt*font:                 xft:Terminus:pixelsize=10:antialias=false
!URxvt*font:                 xft:Dejavu Sans Mono:pixelsize=11:antialias=true:hinting=true
!URxvt*boldFont:             xft:DejaVu Sans Mono:bold:pixelsize=11:antialias=true:hinting=true

!URxvt*termName:             rxvt-256color
URxvt*imLocale:             en_US.UTF-8
URxvt*loginShell:           false
URxvt*saveLines:            32767
URxvt*scrollBar:            false
URxvt*buffered:             true
URxvt*secondaryScroll:      true
URxvt*cursorBlink:          true
URxvt*cursorColor:          #dcdcdc
URxvt*cursorUnderline:      true
URxvt*borderless:           1
URxvt*skipBuiltinGlyphs:    true
URxvt*xftAntialias:         false
URxvt*depth:                32
URxvt*shading:              20
!URxvt*foreground:           #dcdcdc
URxvt*dynamicColors:        on
URxvt*visualBell:           false
URxvt*urgentOnBell:         true
! urxvt perl
URxvt.perl-ext-common:      default,searchable-scrollback,url-select
URxvt.perl-lib:             /usr/lib/urxvt/perl/
! Yankable/clickable URLs
URxvt*keysym.M-u:           perl:url-select:select_next
!URvxt.url-select.button:    1
URxvt.url-select.launcher:  /usr/bin/firefox
URxvt.url-select.underline: true

! -- transparent backbground ------------------------
!URxvt*background:           rgba:0000/0000/0000/ccdd
!URxvt*transparent:          true
!URxvt*inheritPixmap:        true
! ---------------------------------------------------

! -- solid backbground ------------------------------
URxvt*background:           #1c1c1c
! ---------------------------------------------------

!
! ctrl-arrow/home/end keys
!
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Home:          \033[1~
URxvt.keysym.End:           \033[4~

!
! man pages
!
URxvt.colorIT:      #fea63c
URxvt.colorBD:      #b7ce42
URxvt.colorUL:      #87afd7
