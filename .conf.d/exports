# bash exports
#
# vim: ft=sh ts=2 st=2 sts=2 et:

# use British date/time format
export LC_TIME="en_GB.utf8"

# export gtkrc so qt applications are aware
export GTK2_RC_FILES=$HOME/.gtkrc-2.0

# export vim editor
export EDITOR="/usr/bin/vim"

# pretty libreoffice
export OOO_FORCE_DESKTOP="gnome"

# ruby gems - we install gems in user's folder by default
export GEM_HOME=$(ruby -rubygems -e "puts Gem.user_dir")
_gems=$GEM_HOME/bin

# tell matlab to use use system's jre
export MATLAB_JRE="/opt/java/jre"

# AA fonts for Java applications
export _JAVA_OPTIONS='-Dawt.useSystemAAFontSettings=lcd'

# local bin
_bin=$HOME/bin

# export local dirs containing executables
export PATH=${PATH}:${_bin}:${_gems}
unset _bin
unset _gems

# bash history
export HISTCONTROL=ignoredups

# git prompt
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
