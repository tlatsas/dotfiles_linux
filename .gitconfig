[include]
    path = .gitconfig_private

[color]
    ui = always

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status -sb
    co = checkout
    cm = commit
    br = branch
    mr = merge
    sb = show-branch
    lg = log --oneline --decorate
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --no-merges
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --no-merges
    df = diff
    dc = diff --cached
    rb = rebase
    fe = fetch

[init]
    templatedir = ~/.git_template

[sendemail]
    chainreplyto = false
